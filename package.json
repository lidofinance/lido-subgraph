{
  "name": "lido-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen subgraph.mainnet.yaml",
    "build": "graph build subgraph.mainnet.yaml",
    "test": "yarn test:sync && yarn test:withoutSync",
    "test:withoutSync": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns isSynced.test.js",
    "test:sync": "NODE_OPTIONS=--experimental-vm-modules jest tests/isSynced.test.js",
    "deploy-mainnet": "graph deploy --product hosted-service --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ lidofinance/lido subgraph.mainnet.yaml",
    "deploy-testnet": "graph deploy --product hosted-service --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ lidofinance/lido-testnet subgraph.testnet.yaml",
    "create-local": "env-cmd --use-shell graph create --node '$GRAPH_NODE' lido",
    "remove-local": "env-cmd --use-shell graph remove --node '$GRAPH_NODE' lido",
    "deploy-local": "env-cmd --use-shell graph deploy --node '$GRAPH_NODE' --ipfs '$GRAPH_IPFS' lido subgraph.mainnet.yaml"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.21.1",
    "@graphprotocol/graph-ts": "0.20.1"
  },
  "devDependencies": {
    "@jest/types": "27.1.1",
    "dotenv": "10.0.0",
    "env-cmd": "10.1.0",
    "ethers": "5.4.7",
    "graphql": "15.5.3",
    "graphql-request": "3.5.0",
    "jest": "27.2.0",
    "jest-esm-transformer": "1.0.0"
  }
}
